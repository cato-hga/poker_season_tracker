<div class="container">
	<div class="row">
		<div class="col-md-4 offset-md-4">

			<div class="list-group">
				<div class="list-group-item list-group-item-action games">
					<h5 class="list-group-item-heading">Create a New Game</h5>
				</div>
				<div class="list-group-item div-row">
					<%= form_for @game do |f| %>
						<div class="form-group">
							<%= f.hidden_field :season_id, value: Season.current %>
							<%= f.label :date, "Date of Game:", class: "muted-text" %>
							<%= f.date_field :date, class: "form-control" %>
						</div>
						<div class="form-group">
							<%= f.label :buy_in, "Buy In:", class: "muted-text" %>
							<%= f.text_field :buy_in, class: "form-control" %>
						</div>
						<!-- <div class="form-group">
							<%= f.label "Number of Players:", class: "muted-text" %>
							<%= f.select :number_of_players, [*5..20], {}, {required: 'true', autofocus: 'false', class: 'form-control'} %>
						</div> -->
						<div class="form-group">
							<%= f.submit "Let's Go!", class:"btn btn-secondary btn-block" %>
						</div>
					<% end %>
				</div>
			</div>

		</div>
	</div>
</div>
