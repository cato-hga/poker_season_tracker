<div class="container">
  <table class="table table-hover table-sm table-striped">
    <thead class="bg-primary">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Attended</th>
        <th>Placed</th>
        <th>Attendance %</th>
        <th>Current Season Score</th>
      </tr>
    </thead>
    <tbody>
      <% @participants.each_with_index do |p, i| %>
      <tr class="table-row" data-link="<%= participant_path(p) %>">
        <td><%= i + 1 %></td>
        <td><%= p.display_name %></td>
        <td><%= p.evaluated_game_count %></td>
        <td><%= p.game_top_three_count %></td>
        <td><%= p.current_percentage_attended %></td>
        <td><%= p.evaluated_score %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
